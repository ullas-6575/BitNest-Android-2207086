<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F5F5F5"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Reservation"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:textColor="#333"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardBooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:visibility="gone"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvBookingStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirmed"
                android:textColor="#4CAF50"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="end"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guest Details"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvGuestName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name: --"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvGuestPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone: --"
                android:layout_marginBottom="16dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEE"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room Details"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvRoomNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Room: Loading..."
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#009688"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/tvDates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dates: --"
                android:textColor="#555"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvNoBooking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No active bookings found."
        android:textSize="16sp"
        android:visibility="gone"
        android:layout_marginTop="20dp"/>

</LinearLayout>